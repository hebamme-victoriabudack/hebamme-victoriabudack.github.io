---
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import PageBanner from "@/partials/PageBanner.astro";
import { render } from "astro:content";

// get static paths for all pages
export async function getStaticPaths() {
  const COLLECTION_FOLDER = "pages";

  const pages = await getSinglePage(COLLECTION_FOLDER);

  const paths = pages.map((page) => ({
    params: {
      regular: page.id,
    },
    props: { page },
  }));
  return paths;
}

const { page } = Astro.props;
const { title, meta_title, description, image } = page.data;
const { Content } = await render(page);

const bannerData = {
  title: title,
  image: image,
};
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <!-- Banner -->
  <PageBanner banner={bannerData} />
  <!-- /Banner -->

  <!-- Content -->
  <div class="container pt-8">
    <div class="row justify-center">
      <div class="md:col-10 lg:col-10">
        <div class="content">
          <Content />
        </div>
      </div>
    </div>
  </div>
  <!-- /Content -->
</Base>
