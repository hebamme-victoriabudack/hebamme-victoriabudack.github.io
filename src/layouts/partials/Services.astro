---
// src/partials/Services.astro
import ImageMod from "@/components/ImageMod.astro";
import { FaCheck } from "react-icons/fa";
import { markdownify } from "@/lib/utils/textConverter";

interface Button {
  enable?: boolean;
  link: string;
  label: string;
}

interface Feature {
  image: string;
  title: string;
  content: string;
  bulletpoints: string[];
  button: Button;
}

interface Props {
  services: {
    id: string;
    title: string;
    description: string;
    features: Feature[];
  };
}

const { services } = Astro.props;
---

<div class="container mt-8" id={services.id}>
  <div class="row my-8">
    <div class="col-12 mb-4">
      <div class="relative flex items-center">
        <div class="grow border-t"></div>
        <h2 class="mx-6 whitespace-nowrap">{services.title}</h2>
        <div class="grow border-t"></div>
      </div>
    </div>
    <div class="col-12">
      <p set:html={markdownify(services.description)} class="text-lg" />
    </div>
  </div>
  {
    services.features.map((feature, index: number) => (
      <section class={`section-sm ${index % 2 === 0 && "bg-gradient"}`}>
        <div class="container">
          <div class="row items-center 2xl:items-center justify-between">
            {/* Image */}
            <div
              class={`mb:md-0 mb-6 md:col-5 lg:col-6 ${index % 2 !== 0 && "md:order-2"}`}
            >
              <a
                href={feature.button.link}
                class="block relative w-full max-w-md mx-auto overflow-hidden rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl"
              >
                <ImageMod
                  src={feature.image}
                  alt={feature.title}
                  width={1280}
                  height={1280}
                  class="w-full h-auto aspect-3/2 md:aspect-2/3 object-cover transition-transform duration-300"
                  format="webp"
                />
                <div class="absolute inset-0 opacity-0 transition-all duration-300 hover:bg-primary/40 hover:opacity-100 flex items-center justify-center">
                  <span class="text-white text-lg font-semibold tracking-wide">
                    Mehr erfahren
                  </span>
                </div>
              </a>
            </div>
            {/* /Image */}

            {/* Information */}
            <div
              class={`md:col-7 lg:col-6 max-w-md mx-auto ${index % 2 !== 0 && "md:order-1"}`}
            >
              <h3 set:html={markdownify(feature.title)} class="mb-4" />
              <p set:html={markdownify(feature.content)} class="mb-8 text-lg" />
              <ul class="ml-4 list-outside">
                {feature.bulletpoints.map((bullet: string) => (
                  <li class="list-disc relative mb-4">
                    <span set:html={markdownify(bullet)} />
                  </li>
                ))}
              </ul>
              {feature.button.enable && (
                <a class="btn btn-primary mt-5" href={feature.button.link}>
                  {feature.button.label}
                </a>
              )}
            </div>
            {/* /Information */}
          </div>
        </div>
      </section>
    ))
  }
</div>
